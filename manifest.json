{
  "name": "AppPorter Ext",
  "description": "Official AppPorter Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "main.html"
  },
  "permissions": [
    "menus",
    "activeTab",
    "downloads",
    "storage",
    "notifications"
  ],
  "host_permissions": ["*://127.0.0.1:9002/*"],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src 'self' ws://127.0.0.1:9002 wss://127.0.0.1:9002"
  },
  "background": {
    "scripts": ["main.js"]
  }
}
